generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserTable {
  id         Int       @id @default(autoincrement()) @db.UnsignedInt
  name       String    @db.VarChar(256)
  email      String    @unique @db.VarChar(256)
  password   String    @unique @db.VarChar(256)
  disabled   Boolean   @default(false)
  last_login DateTime? @map("last_login") @db.DateTime(0)
  isAdmin    Boolean   @default(false)
  createdAt  DateTime  @default(now()) @db.DateTime(0)
  updatedAt  DateTime? @updatedAt @db.DateTime(0)

  permissions PermissionTable[]

  @@map("users")
}

model CompanyTable {
  id        Int       @id @default(autoincrement()) @db.UnsignedInt
  name      String    @db.VarChar(128)
  createdAt DateTime  @default(now()) @db.DateTime(0)
  updatedAt DateTime? @updatedAt  @db.DateTime(0)

  permissions PermissionTable[]

  @@map("companies")
}

model PermissionTable {
  id        Int       @id @default(autoincrement()) @db.UnsignedInt
  role      Role
  userId    Int       @map("user_id") @db.UnsignedInt
  companyId Int       @map("company_id") @db.UnsignedInt
  createdAt DateTime  @default(now()) @db.DateTime(0)

  user    UserTable    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company CompanyTable @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("permissions")
}

enum Role {
  ADMIN

  LIST
  CREATE
  UPDATE
  DELETE

  USERS_LIST
  USERS_CREATE
  USERS_UPDATE
  USERS_DELETE

  @@map("roles")
}
